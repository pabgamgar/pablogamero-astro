<style>
  /* ABOUT ME */

  #bio {
    display: flex;
    gap: 2rem;
    align-items: center;
    height: fit-content;
    scroll-margin-top: 5rem;
  }

  #aboutMe-text {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  #aboutMe-text p a {
    text-decoration: none;
    color: var(--mainGreen);
    transition: color 0.5s;
  }

  #aboutMe-text p a:hover {
    color: #18614e;
    transition: color 0.5s;
  }

  #aboutMe-img {
    flex: 1;
    position: relative;
    border-radius: 1rem;
    aspect-ratio: 1/1;
  }

  #aboutMe-img > img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1rem;
  }

  /* ABOUT ME END */

  /* IDEAS */

  #ideas {
    display: flex;
    flex-direction: column;
    padding-block: 1rem;
    align-items: center;
    width: 100%;
  }

  #ideas > ol {
    width: 80%;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  /* IDEAS END */

  /* ROLE MODELS */

  .roleModel {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* ROLE MODELS END */

