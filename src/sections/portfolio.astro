---
interface Props {
  lang: "en" | "es";
}

const { lang } = Astro.props;
---

{
  lang === "en" && (
    <div class="content">
      <section id="projects">
        <input type="radio" name="slider" class="d-none" id="s1" />
        <input type="radio" name="slider" class="d-none" id="s2" checked />
        <input type="radio" name="slider" class="d-none" id="s3" />
        <input type="radio" name="slider" class="d-none" id="s4" />
        <input type="radio" name="slider" class="d-none" id="s5" />

        <div class="cards">
          <label for="s1" id="slide1">
            <div class="projectCard">
              <div class="projectCard-top">
                <img
                  src="/images/itsfreeLogo square.webp"
                  alt="It'sFree Logo"
                />
                <h1 class="bold">It'sFree</h1>
              </div>
              <span class="project-type">
                <p>Enterprise</p>
              </span>
              <div class="projectCard-description">
                <p>First free essential consumer goods company in Europe</p>
              </div>
              <div class="projectCard-bottom">
                <a href="https://www.itsfree.biz" class="projectCard-link">
                  Visit Website
                </a>
                <a
                  href="https://www.instagram.com/itsfree.biz"
                  aria-label="Instagram link"
                >
                  <i class="fa-brands fa-instagram footer-social" />
                </a>
                <a
                  href="https://twitter.com/itsfree_biz"
                  aria-label="Twitter link"
                >
                  <i class="fa-brands fa-twitter footer-social" />
                </a>
                <a
                  href="https://www.linkedin.com/company/itsfree"
                  aria-label="Linkedin link"
                >
                  <i class="fa-brands fa-linkedin-in footer-social" />
                </a>
              </div>
            </div>
          </label>
          <label for="s2" id="slide2">
            <div class="projectCard">
              <div class="projectCard-top">
                <img src="/images/omnia.webp" alt="Omnia Logo" />
                <h1 class="bold">Omnia</h1>
              </div>
              <span class="project-type">
                <p>Enterprise</p>
              </span>
              <div class="projectCard-description">
                <p>
                  At Omnia, we bring your brand to life and elevate your digital
                  presence
                </p>
              </div>
              <div class="projectCard-bottom">
                <a href="https://www.omniacorp.es" class="projectCard-link">
                  Visit Website
                </a>
                <a
                  href="https://www.instagram.com/omnia_corp"
                  aria-label="Instagram link"
                >
                  <i class="fa-brands fa-instagram footer-social" />
                </a>
                <a
                  href="https://twitter.com/omnia_corp"
                  aria-label="Twitter Link"
                >
                  <i class="fa-brands fa-twitter footer-social" />
                </a>
                <a
                  href="https://www.linkedin.com/company/omniacorp/"
                  aria-label="Linkedin link"
