---
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  desc: string;
  kw?: string;
  lang?: "en" | "es";
  canon?: string;
  alt?: string;
}

const { lang = "en", title, desc, kw, canon, alt } = Astro.props;
---

<script>
  const favicon = document.getElementById("favicon") as HTMLLinkElement;

  document.addEventListener("visibilitychange", () => {
    const hidden = document.hidden;

    favicon.setAttribute("href", `/favicon${hidden ? "-hidden" : ""}.ico`);
  });
</script>

<html lang={lang}>
  <head>
    <!-- COMMON TAGS -->
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <meta
      name="author"
      content="Pablo Gamero GarcÃ­a"
    />
    <meta
      name="language"
      content={lang}
    />
    <meta
      name="robots"
      content="index, follow"
    />
    <link
      id="favicon"
      rel="icon"
      type="image/svg+xml"
      href="/favicon.ico"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <meta
      http-equiv="Cache-control"
      content="public"
    />
    <!-- END COMMON TAGS -->

    <title>{title}</title>
    <meta
      name="description"
      content={desc}
    />
    <meta
      name="keywords"
      content={kw}
    />

    <meta
      property="og:title"
      content={title}
    />
    <meta
      property="og:description"
      content={desc}
    />
    <meta
      property="og:image"
      content="/favicon.ico"
    />
    <meta
      property="og:url"
      content={canon}
    />
    <meta
      property="og:type"
      content="website"
    />

    <link
      rel="canonical"
      href={canon}
    />
    <link
      rel="alternate"
      hreflang={lang == "en" ? "es" : "en"}
      href={alt}
    />

    <!-- TWITTER -->
    <meta
      name="twitter:card"
      content="summary_large_image"
    />
    <meta
      name="twitter:title"
      content={title}
    />
    <meta
      name="twitter:description"
      content={desc}
    />
    <meta
      name="twitter:image"
      content="/favicon.ico"
    />
    <meta
      name="twitter:url"
      content={canon}
    />
    <ClientRouter />
  </head>

  <body>
    <Header lang={lang} />

    <main>
      <div class="content-container">
        <slot />
      </div>
    </main>
    <style is:global>
      * {
        font-family: "Satoshi", sans-serif;
        box-sizing: border-box;
        padding: 0;
        margin: 0;
      }

      :root {
        --primary: #61ccba;
        --secondary: #4b98ca;
        --black: #1e1e1e;
        --white: #f1f1f1;
        --pastel1: #cfe6cf; /* Pastel Green */
        --pastel2: #fdeca6; /* Pastel Yellow */
        --pastel3: #d8cbea; /* Pastel Purple */
        --pastel4: #ffdab9; /* Pastel Peach */
        --pastel5: #e3d9ff; /* Pastel Lavender */
        --pastel6: #b7e4c7; /* Pastel Mint */
        --pastel7: #ff9e94; /* Pastel Coral */
        --pastel8: #dbc3e3; /* Pastel Lilac */
        --content: rgba(0, 0, 0, 0.75);
        --content-foreground: #e1e1e1;
      }

      html,
      body {
        display: flex;
        flex-direction: column;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }

      html {
        background-color: #2e2e2e;
      }
      body {
        background-image: url("/images/bg.svg");
      }

      main {
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
        height: 100%;
        align-content: center;
      }

      .content-container {
        display: flex;
        flex-direction: column;
        z-index: 1;
        height: 100vh;
        width: 100vw;
        position: absolute;
        overflow-y: scroll;
        overflow-x: hidden;
        align-items: center;
        justify-items: center;
        top: 0;
        padding-block: 64px;
      }

      .content {
        border-radius: 12px;
        background-color: var(--content);
        backdrop-filter: blur(10px);
        display: flex;
        flex-direction: column;
        padding: 32px;
        overflow-y: scroll;
        height: fit-content;
        min-width: 220px;
        max-width: min(calc(100vw - 64px), 1000px);
        max-height: calc(100vh - 112px);
        animation: transitionIn 1s;
        color: var(--content-foreground);
      }

      h1 {
        font-size: 1.875rem /* 30px */;
        line-height: 2.25rem /* 36px */;
        font-weight: bold;
      }
      h2 {
        font-size: 1.1rem /* 20px */;
        line-height: 1.75rem /* 28px */;
        font-weight: bold;
      }
      h3 {
        font-size: 1rem /* 18px */;
        line-height: 1.75rem /* 28px */;
        font-weight: 500;
      }

      @keyframes transitionIn {
        from {
          transform: scale(0.8);
        }
        to {
          transform: scale(1);
        }
      }
      @keyframes slideInBottom {
        0% {
          opacity: 0;
          transform: translateY(20%);
        }

        50% {
          opacity: 1;
        }

        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes slideInLeft {
        0% {
          opacity: 0;
          transform: translateX(-20%);
        }

        50% {
          opacity: 1;
        }

        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes slideInRight {
        0% {
          opacity: 0;
          transform: translateX(20%);
        }

        50% {
          opacity: 1;
        }

        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }
      @keyframes slideInTop {
        0% {
          opacity: 0;
          transform: translateY(-20%);
        }

        50% {
          opacity: 1;
        }

        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @media screen and (max-width: 640px) {
        main {
          padding-inline: 16px;
          align-items: center;
        }
        .content {
          padding: 20px !important;
        }
      }
      .content:nth-child(1) {
        animation: transitionIn 0.2s;
      }
      .content:nth-child(2) {
        animation: transitionIn 0.4s;
      }
      .content:nth-child(3) {
        animation: transitionIn 0.6s;
      }
      .content:nth-child(4) {
        animation: transitionIn 0.8s;
      }
      .content:nth-child(5) {
        animation: transitionIn 1s;
      }
      .content:nth-child(6) {
        animation: transitionIn 1.2s;
      }
      .content:nth-child(7) {
        animation: transitionIn 1.4s;
      }
      .content:nth-child(8) {
        animation: transitionIn 1.6s;
      }
      .content:nth-child(9) {
        animation: transitionIn 1.8s;
      }
      .content:nth-child(10) {
        animation: transitionIn 2s;
      }
      .scrollbar-hide::-webkit-scrollbar {
        display: none !important;
      }

      /* For IE, Edge and Firefox */
      .scrollbar-hide {
        -ms-overflow-style: none !important; /* IE and Edge */
        scrollbar-width: none !important; /* Firefox */
      }
      .no-drag {
        user-drag: none;
        -webkit-user-drag: none;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
      }
    </style>
  </body>
</html>
