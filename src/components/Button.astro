---
const {
  type = "button",
  size = "md",
  variant = "primary",
  border,
  classes,
  external,
  href,
  ...rest
} = Astro.props;
---

<button
  {...external && { target: "_blank", rel: "noopener noreferrer" }}
  {type}
  class:list={[classes, { border: border }, variant, size]}
  {...rest}
  onclick={`location.href='${href}'`}
>
  <slot />
</button>

<style>
  button {
    width: fit-content;
    padding: 8px 16px;
    border-radius: 6px;
    min-width: 100px;
  }

  .primary {
    background-color: var(--primary);
    color: black;
    transition: all 0.3s;
  }

  .secondary {
    background-color: var(--secondary);
    color: white;
    transition: all 0.3s;
  }

  .primary:hover,
  .secondary:hover {
    box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.2);
    transition: all 0.3s;
  }

  .outlined {
    border: 1px solid var(--black);
    background-color: transparent;
    transition: all 0.3s;
  }
  .outlined:hover {
    box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.2) inset;
    transition: all 0.3s;
  }

  .border {
    border: 1px solid var(--black);
  }
</style>
