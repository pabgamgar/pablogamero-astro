---
import SpainFlag from "../icons/spain.astro";
import UKFlag from "../icons/uk.astro";
import { Home, User, Briefcase, Mail } from "lucide-react";

interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const currentPath = Astro.url.pathname;

// Determine which nav item is active
const getActivePath = (path: string) => {
  // Normalize path
  const normalizedPath = path.replace(/\/$/, "") || "/";
  const normalizedCurrent = currentPath.replace(/\/$/, "") || "/";
  
  // Check for exact match or if current starts with path (for nested routes)
  if (normalizedPath === "/" || normalizedPath === "/es") {
    return normalizedCurrent === normalizedPath;
  }
  return normalizedCurrent.startsWith(normalizedPath);
};

// Navigation items for each language
const navItems = lang === "en" ? [
  { href: "/", label: "Home", icon: Home },
  { href: "/about", label: "About", icon: User },
  { href: "/work", label: "Work", icon: Briefcase },
  { href: "/contact", label: "Contact", icon: Mail },
] : [
  { href: "/es", label: "Inicio", icon: Home },
  { href: "/es/sobre-mi", label: "Sobre m√≠", icon: User },
  { href: "/es/trabajo", label: "Trabajo", icon: Briefcase },
  { href: "/es/contacto", label: "Contacto", icon: Mail },
];

const langSwitchHref = lang === "en" ? "/es" : "/";
---

<nav id="mobile-nav" class="mobile-nav">
  <div class="nav-container">
    {navItems.map((item) => {
      const isActive = getActivePath(item.href);
      return (
        <a 
          href={item.href} 
          class={`nav-item ${isActive ? 'active' : ''}`}
          aria-current={isActive ? 'page' : undefined}
        >
          <item.icon size={22} />
          {isActive && <span class="nav-label">{item.label}</span>}
        </a>
      );
    })}
    
    <div class="nav-divider"></div>
    
    <a href={langSwitchHref} class="nav-item lang-switch">
      {lang === "en" ? <SpainFlag size="20" /> : <UKFlag size="20" />}
    </a>
  </div>
</nav>

<style>
  .mobile-nav {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 50;
    padding: 16px;
    padding-bottom: calc(16px + env(safe-area-inset-bottom, 0px));
  }
  
  @media screen and (width < 640px) {
    .mobile-nav {
      display: block;
    }
  }
  
  .nav-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 12px 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }
  
  .nav-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 10px 12px;
    border-radius: 12px;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 14px;
    font-weight: 500;
  }
  
  .nav-item:hover {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .nav-item.active {
    background: linear-gradient(135deg, rgba(97, 204, 186, 0.25), rgba(75, 152, 202, 0.25));
    color: #fff;
    padding: 10px 16px;
  }
  
  .nav-label {
    animation: fadeIn 0.3s ease forwards;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateX(-4px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .nav-divider {
    width: 1px;
    height: 24px;
    background: rgba(255, 255, 255, 0.15);
    margin: 0 4px;
  }
  
  .lang-switch {
    padding: 10px;
  }
</style>
