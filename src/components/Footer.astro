---
import GithubIcon from "@/icons/github.astro";
import InstaIcon from "@/icons/instagram.astro";
import LinkedInIcon from "@/icons/linkedin.astro";
import XIcon from "@/icons/x.astro";

const githubUsername = "pabgamgar";
const linkedinUsername = "pabgamgar";
const instagramUsername = "pabgamgar";
const twitterUsername = "pabgamgar";

const { lang } = Astro.props;
---

<footer
    class="flex flex-col gap-0.5 text-[var(--content-foreground)] items-center"
>
    <div class="socials">
        <a
            target="_blank"
            rel="noopener noreferrer"
            href={`https://github.com/${githubUsername}`}
            class="social-icon"
            aria-label="GitHub Profile"
        >
            <GithubIcon size="24" />
        </a>
        <a
            target="_blank"
            rel="noopener noreferrer"
            href={`https://linkedin.com/in/${linkedinUsername}`}
            class="social-icon"
            aria-label="LinkedIn Profile"
        >
            <LinkedInIcon size="24" />
        </a>
        <a
            target="_blank"
            rel="noopener noreferrer"
            href={`https://instagram.com/${instagramUsername}`}
            class="social-icon"
            aria-label="Instagram Profile"
        >
            <InstaIcon size="24" />
        </a>
        <a
            target="_blank"
            rel="noopener noreferrer"
            href={`https://x.com/${twitterUsername}`}
            class="social-icon"
            aria-label="X Profile"
        >
            <XIcon size="24" />
        </a>
    </div>
    <span class="text-xs text-neutral-400"
        >Copyright Â© 2026 pablogamero.com. {
            lang === "es"
                ? "Todos los derechos reservados."
                : "All rights reserved."
        }</span
    >
</footer>

<style>
    .socials {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 16px;
        padding-top: 16px;
    }

    .social-icon {
        padding: 10px;
        border-radius: 8px;
        color: var(--content-foreground);
        transition: all 250ms ease-in;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .social-icon:hover {
        scale: 1.1;
        transition: all 250ms ease-in;
    }
</style>
