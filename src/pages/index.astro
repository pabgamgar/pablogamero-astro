---
import LangSelector from "@/components/LangSelector.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import StatusTag from "@/components/StatusTag.astro";
---

<MainLayout
    title="Pablo Gamero"
    desc="Pablo Gamero — I learn by building products and working on real business problems."
    kw="Pablo Gamero, Pablo Gamero García, building in public, Limero, Pubmefy, Dibs, developer, entrepreneur"
    canon="https://pablogamero.com"
    alt="https://pablogamero.com/es"
>
    <LangSelector />
    <div
        id="content"
        class="flex flex-col gap-12 items-center flex-1 justify-center px-2 pb-8 max-w-xl text-center"
    >
        <div class="flex flex-col gap-3 items-center">
            <h1 class="text-center flex flex-col">
                <span class="font-normal text-2xl">Hi there, I'm </span>
                <span class="text-3xl">Pablo Gamero</span>
            </h1>
            <StatusTag lang="en" />
        </div>
        <div class="flex flex-col items-center gap-3 group/projects">
            <p class="text-2xl">I build problem-specific products</p>
            <div class="flex gap-2">
                <a
                    href="https://dibs.pablogamero.com"
                    class="relative group/dibs translate-x-2 -rotate-6 group-hover/projects:translate-x-0 group-hover/projects:rotate-0 transition-transform duration-300"
                >
                    <img
                        src="/images/dibs-icon.webp"
                        alt="Dibs icon"
                        class="size-10 rounded-lg"
                    />
                    <span
                        class="absolute -top-8 -translate-x-16 bg-black text-white px-2.5 py-1 rounded-xl bg-opacity-80 text-xs opacity-0 sm:group-hover/dibs:opacity-100 transition-opacity whitespace-nowrap hidden sm:block"
                        >Dibs - A simple debt tracker</span
                    >
                </a>
                <a
                    href="https://pubmefy.vercel.app"
                    class="relative group/pubmefy -translate-x-2 -rotate-6 group-hover/projects:translate-x-0 group-hover/projects:rotate-0 transition-transform duration-300"
                >
                    <img
                        src="/images/pubmefy-icon.webp"
                        alt="Pubmefy icon"
                        class="size-10 rounded-lg"
                    />
                    <span
                        class="absolute -top-8 -translate-x-24 bg-black text-white px-2.5 py-1 rounded-xl bg-opacity-80 text-xs opacity-0 sm:group-hover/pubmefy:opacity-100 transition-opacity whitespace-nowrap hidden sm:block"
                        >Pubmefy - Automated CVs for researchers</span
                    >
                </a>
            </div>
        </div>
        <p class="text-2xl text-balance group/limero">
            I'm also running <a
                href="https://limero.co"
                class="font-medium group-hover/limero:text-blue-400 transition-colors duration-500 italic"
                >Limero</a
            >, where I work with small businesses on real operational problems.
        </p>
        <nav class="flex gap-6 pt-4 text-sm text-white/60">
            <a href="/projects" class="hover:text-white/90 transition">
                Projects
            </a>
            <a href="/blog" class="hover:text-white/90 transition"> Writing </a>
            <a href="/about" class="hover:text-white/90 transition"> About </a>
        </nav>
    </div>
</MainLayout>
