---
import MainLayout from "@/layouts/MainLayout.astro";
import Button from "@/components/Button.astro";
---

<MainLayout
  title="Contáctame | Pablo Gamero García"
  desc="Hablemos! ¡Ponte en contacto conmigo y cuéntame tus ideas!"
  kw="Pablo Gamero García, contacto, desarrollador, emprendedor, consultas, colaboraciones"
  lang="es"
  canon='https://pablogamero.com/es/contacto'
  alt='https://pablogamero.com/en/contact'
>
  <div class="content">
    <h2>Hablemos!</h2>
    <form
      action="https://formspree.io/f/mqkopjvg"
      method="POST"
      class="mt-4 flex flex-col gap-2"
    >
      <div class="flex flex-col gap-1">
        <label for="name">Nombre</label>
        <input type="text" id="name" name="name" required />
      </div>
      <div class="flex flex-col gap-1">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required />
      </div>
      <div class="flex flex-col gap-1">
        <label for="message">Mensaje</label>
        <textarea id="message" name="message" required></textarea>
      </div>
      <Button type="submit">Enviar</Button>
    </form>
  </div>
</MainLayout>

<style>
  .content {
    width: 500px;
    margin: auto;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  input,
  textarea {
    padding: 0.5rem;
    border: 1px solid var(--primary);
    border-radius: 5px;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: #1e1e1e;
  }

  textarea {
    min-height: 100px;
    resize: none;
  }
</style>
