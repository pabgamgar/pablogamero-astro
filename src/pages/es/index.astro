---
import Button from "@/components/Button.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import GithubIcon from "@/icons/github.astro";
import InstaIcon from "@/icons/instagram.astro";
import LinkedInIcon from "@/icons/linkedin.astro";
import XIcon from "@/icons/x.astro";
---

<MainLayout
  title="Pablo Gamero • Desarrollador y Emprendedor"
  desc="¡Bienvenido a mi web! Soy un desarrollador y emprendedor. Conoce más sobre mi trabajo, experiencia y cómo contactarme."
  kw="Pablo Gamero García, desarrollador, emprendedor, freelancer, tecnología, startups, desarrollo web"
  lang="es"
  canon="https://pablogamero.com/es"
  alt="https://pablogamero.com"
>
  <div class="container">
    <div class="content">
      <h1 class="text-5xl font-bold">Pablo Gamero</h1>
      <h2 class="text-2xl font-light">Desarrollador y Emprendedor</h2>
      <p
        class="px-2.5 py-0.5 rounded-full bg-[var(--content)] w-fit flex gap-2 items-center text-sm text-center self-center sm:self-auto"
      >
        <span class="relative inline-flex rounded-full size-2 bg-green-500">
          <span
            class="animate-ping inline-flex size-full rounded-full bg-green-400 opacity-75"
          >
          </span>
        </span>
        Open to work
      </p>
      <p>Aprovechando la tecnología para diseñar soluciones innovadoras.</p>
      <div
        class="mt-8 flex flex-col items-center gap-3 sm:mt-4 sm:flex-row sm:gap-6"
      >
        <Button href="/es/trabajo">Explora Mi Trabajo</Button>
        <Button
          variant="outlined"
          href="/es/contacto"
          >Contáctame</Button
        >
      </div>
    </div>
    <div
      id="socials-list"
      class="flex h-fit gap-2 sm:absolute sm:right-0 sm:top-1/2 sm:-translate-y-1/2 sm:flex-col"
    >
      <a
        target="_blank"
        rel="noopener noreferrer"
        href="https://github.com/pabgamgar"
        class="social"
        aria-label="GitHub Profile"
      >
        <GithubIcon size="32" /></a
      >
      <a
        target="_blank"
        rel="noopener noreferrer"
        href="https://linkedin.com/in/pabgamgar"
        class="social"
        aria-label="LinkedIn Profile"
      >
        <LinkedInIcon size="32" /></a
      >
      <a
        target="_blank"
        rel="noopener noreferrer"
        href="https://instagram.com/pabgamgar"
        class="social"
        aria-label="Instagram Profile"
      >
        <InstaIcon size="32" /></a
      >
      <a
        target="_blank"
        rel="noopener noreferrer"
        href="https://x.com/pabgamgar"
        class="social"
        aria-label="X Profile"
      >
        <XIcon size="32" /></a
      >
    </div>
  </div>
</MainLayout>

<style>
  .container {
    margin-left: 10%;
    position: absolute;
    width: 500px;
    height: 100vh;
    top: 0;
    animation: transitionIn 1s;
    align-self: flex-start;
    justify-self: center;
    display: flex;
    align-items: center;
  }
  .content {
    padding: 64px 96px 64px 40px;
    width: 500px;
    height: 350px;
    justify-content: center;
    gap: 16px;
    clip-path: path(
      "M0 12C0 5.37259 5.37258 0 12 0H488C494.627 0 500 5.37258 500 12V38.5556C500 45.183 494.627 50.5556 488 50.5556H452C445.373 50.5556 440 55.9281 440 62.5556V287.444C440 294.072 445.373 299.444 452 299.444H488C494.627 299.444 500 304.817 500 311.444V338C500 344.627 494.627 350 488 350H12C5.37258 350 0 344.627 0 338V12Z"
    );
    transition: all 0.45s ease-in-out;
    animation: none;
  }

  .social {
    padding: 10px;
    background-color: var(--content);
    border-radius: 8px;
    backdrop-filter: blur(10px);
    animation: slideInTop 0.45s ease-in-out forwards;
    opacity: 0;
    color: var(--content-foreground);
  }
  .social:nth-child(1) {
    animation-delay: 0.15s;
  }
  .social:nth-child(2) {
    animation-delay: 0.3s;
  }
  .social:nth-child(3) {
    animation-delay: 0.45s;
  }
  .social:nth-child(4) {
    animation-delay: 0.6s;
  }

  @media screen and (width < 640px) {
    .content {
      padding: 64px 24px 64px 24px;
      width: 95%;
      max-width: 450px;
      clip-path: none;
      height: fit-content;
    }
    .container {
      margin: 0;
      width: 100vw;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 16px;
      text-align: center;
    }
  }
</style>
